page{
	font-size: 14px;
	font-family: 'Microsoft YaHei';
}

.infor-head{
	height: 180px;
	width: 100%;
	display: flex;
	background-color: #1abc9c;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	color: white;
}

.editor-btn{
	position: absolute;
	right: 10px;
	top: 10px;
	border-radius: 10px;
	background-color: rgba(0,0,0,.3);
	padding: 2px 10px;
	font-size: 12px;
}

.user-pic{
	height: 50px;
	width: 50px;
	border-radius: 100%;
	border: 1px solid #bdc3c7;
	position: relative;
}
.user-pic view{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0px;
}

.user-pic image{
	height: 100%;
	width: 100%;
	border-radius: 100%;
}

.username{
	margin-top: 8px;
}

.introduction, .about-box, .logout{
	background-color: white;
	height: 50px;
	box-shadow: 0px 0px 4px #bdc3c7;
	display: flex;
	align-items: center;
	padding-left: 12px;
}

.introduction-icon{
	display: flex;
	flex-direction: row;
	flex: 1;
}

.intro-content{
	flex: 4;
}

.introduction image{
	width: 20px;
	height: 20px;
}

.introduction text{
	margin-left: 10px;
}

.about-box{
	margin-top: 10px;
}

.about{
	display: flex;
	flex-direction: row;
	align-items: center;
}

.about text{
	margin-left: 12px;
}

.about image{
	width: 20px;
	height: 20px;
}

.logout{
	margin-top: 10px;
	justify-content: center;
	color: #e74c3c;
}