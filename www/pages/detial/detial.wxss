page{
	font-family: 'Microsoft Yahei';
	font-size: 14px;
	background-color: white;
}

.title-img{
	max-height: 180px;
	overflow: hidden;
}

.title-img image{
	width: 100%;
}

.top-title{
	max-height: 100px;
	background-color: #3498db;
	color: white;
	padding: 15px;
	text-align: center;
	font-size: 16px;
}

.author-infor{
	width: 80%;
	max-height: 80px;
	margin: 0 auto;
	box-shadow: 0px 0px 5px #bdc3c7;
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding: 5px 10px;
}

.author-name{
	display: flex;
	flex-direction: row;
	align-items: center;
}

.author-name image{
	height: 20px;
	width: 20px;
	border-radius: 100%;
}

.author-name text{
	margin-left: 10px;
}

.author-introduction{
	margin-top: 10px;
}

.article-content{
	margin-top: 10px;
}

.article-title{
	text-align: center;
	font-size: 16px;
}

.content{
	margin: 20px 10px;
}